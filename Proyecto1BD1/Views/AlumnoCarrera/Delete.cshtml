@model List<String>

@{
    ViewData["Title"] = "Delete";
}

<h2>Borrar Relacion de estudiante y carrera</h2>

<h3>¿Esta seguro que desea borrar esto?</h3>
<div>
    <h4>Estudiante</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Carrera
        </dt>
        <dd>
            @Model.ElementAt(0)
        </dd>
        <dt>
            Estudiante
        </dt>
        <dd>
            @Model.ElementAt(1)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" name="estudiante" value="@Model.ElementAt(1)" />
        <input type="hidden" name="carrera" value="@Model.ElementAt(0)"/>
        <input type="submit" value="Borrar" class="btn btn-default" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
