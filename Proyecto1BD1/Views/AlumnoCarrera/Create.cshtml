@model Proyecto1BD1.Models.CursoEstudiante

@{
    var Carreras = (IEnumerable<SelectListItem>)ViewData["Carreras"];    
    var Alumnos = (IEnumerable<SelectListItem>)ViewData["Alumnos"];
    ViewData["Title"] = "Create";
}

<h2>Crear asignacion de estudiante a carrera</h2>

<h4>Curso Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Carnet" class="control-label"></label>
                <select asp-for="Carnet" class ="form-control" asp-items="Alumnos"></select>
            </div>            
            <div class="form-group">
                <label asp-for="Carrera" class="control-label"></label>
                <select asp-for="Carrera" class ="form-control" asp-items="Carreras"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
