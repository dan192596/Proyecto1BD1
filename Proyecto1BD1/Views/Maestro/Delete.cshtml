@model List<String>

@{
    ViewData["Title"] = "Delete";
}

<h2>Borrar Estudiante</h2>

<h3>¿Esta seguro que desea borrar esto?</h3>
<div>
    <h4>Estudiante</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Registro
        </dt>
        <dd>
            @Model.ElementAt(0)
        </dd>
        <dt>
            Carnet
        </dt>
        <dd>
            @Model.ElementAt(1)
        </dd>
        <dt>
            Nombre
        </dt>
        <dd>
            @Model.ElementAt(2)
        </dd>
        <dt>
            Apellido
        </dt>
        <dd>
            @Model.ElementAt(3)
        </dd>
        <dt>
            Correo
        </dt>
        <dd>
            @Model.ElementAt(4)
        </dd>

    </dl>
    
    <form asp-action="Delete">        
        <input type="submit" value="Borrar" class="btn btn-default" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
